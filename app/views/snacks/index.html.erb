<p id="notice"><%= notice %></p>

<h1>Snacks</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @snacks.each do |snack| %>
      <tr>
        <td><%= snack.name %></td>
        <td><%= snack.description %></td>
        <td><%= snack.price %></td>
        <td><%= image_tag snack.image.url(:thumb) %></td>
        <td><%= link_to 'Show', snack, class: 'button button-clear' %></td>
        <td><%= link_to 'Edit', edit_snack_path(snack), class: 'button button-clear' %></td>
        <td><%= link_to 'Destroy', snack, method: :delete, data: { confirm: 'Are you sure?' }, class: 'button button-clear' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Snack', new_snack_path, class: 'button button-outline' %>
