<div class="container" >

  <div class="row">
    <h1 class="col s8">Snacks</h1>

  </div>

  <ul class="collection">

    <% @snacks.each do |snack| %>

        <li class="collection-item avatar">
          <a href=<%= edit_snack_url(snack)%> >
            <%= image_tag snack.image.url(:thumb), class:"circle" %>
            <span class="title"><%= snack.name %></span>
            <p><%= snack.description %></p>
            <span class="secondary-content"><i><%= snack.price %></i></span>
          </a>
        </li>

    <% end %>

  </ul>
  <ul class="pagination row" >
    <%= will_paginate @snacks %>
  </ul>


  <ul class="pagination row" >

    <li class="disabled"><a href="#!"><i class="material-icons">chevron_left</i></a></li>
    <li class="active"><a href="#!">1</a></li>
    <li class="waves-effect"><a href="#!">2</a></li>
    <li class="waves-effect"><a href="#!">3</a></li>
    <li class="waves-effect"><a href="#!">4</a></li>
    <li class="waves-effect"><a href="#!">5</a></li>
    <li class="waves-effect"><a href="#!"><i class="material-icons">chevron_right</i></a></li>
  </ul>

  <div class="fixed-action-btn">
    <a class="btn-floating btn-large red" href=<%= new_snack_url %>>
      <i class="large material-icons">add</i>
    </a>
  </div>


</div>
