<%= form_for(snack, class:'col s12') do |f| %>
    <% if snack.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(snack.errors.count, "error") %> prohibited this snack from being saved:</h2>

          <ul>
            <% snack.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="row">
      <div class="input-field col s12">
        <%= f.label :name %>
        <%= f.text_field :name %>
      </div>
    </div>


    <div class="row">
      <div class="input-field col s12">
        <%= f.label :description %>
        <%= f.text_area :description, class:'materialize-textarea' %>
      </div>
    </div>

    <div class="row">
      <div class="input-field col s12">
        <%= f.label :price %>
        <%= f.number_field  :price, step: 0.5%>
      </div>
    </div>


    <div class="file-field input-field row">
      <div class="btn">Bild ausw√§hlen...</span>
        <%= f.file_field :image%>
      </div>
      <div class="file-path-wrapper">

        <input class="file-path validate" type="text">
      </div>
    </div>

    <div class="row">

      <div class="actions">
        <button class="btn waves-effect waves-light" type="submit" name="action">Speichern
          <i class="material-icons right">send</i>
        </button>

      </div>
    </div>


<% end %>

